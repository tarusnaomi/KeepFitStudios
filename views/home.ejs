    <% } else {%>
      <main>
        <h1> Stay Fit <br> <span>Stay Healty</span> </h1>
        <section>
          <p>We are here to keep you fit at home, no gym eqipment needed!</p>
          <div id="offers">
            <div class="offer" id="offer-1">
              <a href="/training">
              <img src="images/home-one.png" alt="muscle" class="homepic" />
              Strengh training
            </a>
            </div>
            <div class="offer" id="offer-2">
              <a href="/lweight">
                <img src="images/looseweight.png" alt="looseweight"class="homepic" />
                Loose Weight
              </a>
            </div>
            <div class="offer" id="offer-3">
              <a href="/gainmuscle">
              <img src="images/muscles.png" alt="muscle" class="homepic" />
              Gain body muscle
            </a>
            </div>
          </div>
        </section>
        <a href="/signup" style="text-decoration: none;color: white;">Get started now</a>
    </main>
    <%}%> 
    
    <%- include ("_footer.ejs") %>
  </body>
</html>
